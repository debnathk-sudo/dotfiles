" syntaxing / cursor line
syntax enable
set encoding=utf-8
set cul 
hi CursorLine term=none cterm=none ctermbg=none
filetype on
filetype plugin on
let g:ycm_global_ycm_extra_conf = "~/.vim/.ycm_extra_conf.py"
noremap B ^ 
noremap E $
noremap gv `[V`]
set cmdheight=1

" formatting bye tabs 
set tabstop=2
set softtabstop=2
set shiftwidth=2
set smarttab
set nu
set expandtab
set nobackup
set noerrorbells

" colors and shell styles
" default colors are nice tho @ gruvbox
set background=dark
" colorscheme gruvbox
set scrollfocus
set showmode
set showcmd
set ttyfast
set shell=bash

" hightlights search (use :noh to clear the highlights, n can turn back on)
set hlsearch
set incsearch
set showmatch " new

" auto y for Y/N installs
"set shortmess=ao0tI 

" memory management
" stops complaints about switching buffer with changes
set hidden
set history=100

" display
set smartindent
set linebreak
set icon
set ruler
set nocompatible
set nowrap 
set showbreak=â–¹ 

" autocomplete in insert mode on ctrl+N 
set complete
set completeopt
set wildmenu
 
" universal copy and paste, prevents yanks and deletes
set viminfo='20,<1000,s1000
set 
set shortmess+=c
" set colorcolumn=80
" highlight ColorColumn ctermbg=0 guibg=darkgrey

" <3 vim plugins
call plug#begin('~/.vim/plugged')
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'vim-pandoc/vim-pandoc'
Plug 'airblade/vim-gitgutter'
